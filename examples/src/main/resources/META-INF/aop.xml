<!DOCTYPE aspectj PUBLIC
   "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
   <weaver options="-verbose -Xlint:default -showWeaveInfo">
      <!-- Weave types that are within the javax.* or org.aspectj.*
        packages. Also weave all types in the foo package that do
        not have the @NoWeave annotation. -->
      <include within="net.andreho.examples.one.aspectj..*"/>
      <!-- only weave classes in our application-specific packages -->
      <!--<include within="net.andreho.examples.*"/>-->
   </weaver>
   <aspects>
      <!--&lt;!&ndash;&lt;!&ndash; Of the set of aspects declared to the weaver&ndash;&gt;-->
           <!--&lt;!&ndash;use aspects matching the type pattern "com..*" for weaving. &ndash;&gt;&ndash;&gt;-->
      <!--<include within="net.andreho.examples..*"/>-->
      <!--&lt;!&ndash;&lt;!&ndash; weave in just this aspect &ndash;&gt;&ndash;&gt;-->
      <aspect name="net.andreho.examples.one.aspectj.AroundAspectWithAnnotation"/>
   </aspects>
</aspectj>